{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "./dist",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
